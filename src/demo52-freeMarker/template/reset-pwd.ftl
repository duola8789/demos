<#assign resetPasswordLink = "https://www.baidu.com">

<html>
    <body>
        <div style="width: 100%; height: 99%; background: #f6f6f6; padding: 1px">
            <div style="width: 700px;max-width: 80%;margin: 40px auto;background: #f6f6f6;padding: 32px 24px 24px 24px;font-family: Helvetica, 'Microsoft YaHei', Arial, sans-serif;font-size: 16px;line-height: 26px;color: #272e47;font-weight: 400;">
                <div style="width: 164px; height:24px; margin: 0 auto 34px;">
                    <img src="https://vr.leadsnavi.com/img/mail/logo.png" style="width: 164px; height:24px;" />
                </div>
                <div style="text-align: center; margin-top: 50px;">
                    <div style="display: inline-block; text-align: left;">
                        <div style="margin-bottom: 5px;">
                            Forgot your password? Please follow these steps to reset it:
                        </div>
                        <div style="text-indent: 20px">
                            1. Click the link provided below to verify your identity.
                        </div>
                        <div style="text-indent: 20px">
                            2. Create a new password.
                        </div>
                    </div>
                </div>
                <div style="text-align: center; margin: 120px 0 40px 0">
                    <a href="${resetPasswordLink}" style="background: #000; color: #fff; padding: 18px 16px; text-decoration: none; border-radius: 6px; margin: 0 auto; text-align: center;font-size: 16px;">
                        Reset Password
                    </a>
                </div>
                <div style="text-align: center;">
                    The message can ignore if you did not initiate a password reset request.
                </div>
                <div style="text-align: center;margin-bottom: 50px">
                    In case you need any help, just reply to this message or email us at
                    <a href="mailto:support@leadsnavi.com" style="color: #8a33ad; display: inline-block; word-break: break-word">
                        support@leadsnavi.com
                    </a>
                </div>
            </div>
        </div>
    </body>
</html>
